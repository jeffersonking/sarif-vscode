{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"sourceMap": true,
		
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"jsx": "react",
		"resolveJsonModule": true,

		"noImplicitThis": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
